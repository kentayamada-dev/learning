<Window
  x:Class="Wpf.Views.WeatherView"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:viewmodels="clr-namespace:Wpf.ViewModels"
  xmlns:prism="http://prismlibrary.com/"
  mc:Ignorable="d"
  d:DataContext="{d:DesignInstance Type=viewmodels:WeatherViewModel}"
  WindowStartupLocation="CenterScreen"
  Title="{Binding Title}"
  Height="450"
  Width="800"
  ResizeMode="NoResize">
  
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="2*"/>
    </Grid.ColumnDefinitions>
    
    <Grid>
      <ContentControl
        prism:RegionManager.RegionName="UserInfoViewRegion"/>
    </Grid>
    
    <TabControl Grid.Column="1">
      <TabItem Header="Latest">
        <ContentControl
        prism:RegionManager.RegionName="LatestWeatherViewRegion"/>
      </TabItem>
      <TabItem Header="List">
        <Label>い</Label>
      </TabItem>
      <TabItem Header="Edit">
        <Label>う</Label>
      </TabItem>
    </TabControl>
  </Grid>
</Window>
